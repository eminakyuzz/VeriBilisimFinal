@model IEnumerable<VeriBilisimFinal.Models.IL>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">İller Listesi</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="IL" asp-action="Create" class="btn btn-primary"> Yeni İl Ekle</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>İl ID </th>
                    <th>İL ADI</th>

                    <th>Düzenle</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.ID</td>
                        <td width="35%">@item.Ad</td>



                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="IL" asp-action="Update" asp-route-Id="@item.ID" class="btn btn-primary mx-1">Güncelle</a>
                                <a asp-controller="IL" asp-action="Delete" asp-route-Id="@item.ID" class="btn btn-danger mx-1">Sil</a>

                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>Henüz bir İl Eklenmedi</p>
    }


</div>





