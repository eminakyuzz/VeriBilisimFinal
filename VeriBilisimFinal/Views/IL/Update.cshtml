@model VeriBilisimFinal.Models.IL

<form method="post" asp-action="Update">
    <div class="border p-3">
        <input asp-for="ID" hidden />
        <div class="form-group row">
            <h2 class="text-black-50 p1-3">Güncelle İL</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">İL Ad :</span>
                        <input type="text" asp-for="Ad" asp-validation-for="Ad" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>





                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75 " value="Güncelle" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75">Geri</a>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />

    }}





