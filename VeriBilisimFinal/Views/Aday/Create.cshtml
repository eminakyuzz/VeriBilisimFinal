@model VeriBilisimFinal.Models.Aday

<form method="post" asp-action="Create">
    <div class="borderp-3">
        <div class="form-group row">
            <h2 class="text-black-50 p1-3">Aday Ekleme</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Aday Ad :</span>
                    <input type="text" asp-for="AdayAdi" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Aday Soyad :</span>
                    <input type="text" asp-for="AdaySoyadi" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Başvuru Tarihi :</span>
                    <input type="text" asp-for="BasvuruTarihi" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">İşyeri :</span>
                    <input type="text" asp-for="IsyeriAdi" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Pozisyon :</span>
                    <input type="text" asp-for="Pozisyon" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Aday İli :</span>
                    <input type="text" asp-for="IL" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Personel İlçesi :</span>
                    <input type="text" asp-for="Ilce" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Açıklama :</span>
                    <input type="text" asp-for="Aciklama" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75 " value="Oluştur" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Geri</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

</form>


